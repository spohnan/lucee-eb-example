<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>deployment-bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>deployment-bundle</outputDirectory>
            <includes>
                <include>*-beanstalk.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../cloudformation</directory>
            <outputDirectory>deployment-bundle/cloudformation</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../packaging/deploy</directory>
            <outputDirectory>deployment-bundle/packaging/deploy</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../docs/target/generated-docs</directory>
            <outputDirectory>deployment-bundle/docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../..</directory>
            <outputDirectory>deployment-bundle</outputDirectory>
            <includes>
                <include>Makefile</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>deployment-bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory/>
            <includes>
                <include>*-beanstalk.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../cloudformation</directory>
            <outputDirectory>cloudformation</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../packaging/deploy</directory>
            <outputDirectory>deploy</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../docs/target</directory>
            <outputDirectory/>
            <includes>
                <include>docs-bundle.zip</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>